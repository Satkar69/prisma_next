generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  user_id        Int             @id @default(autoincrement())
  name           String
  age            Int
  email          String          @unique
  isAdmin        Boolean
  UserPreference UserPreference?
  writtenPost    Post[]          @relation("writtenBy")
  likedPost      Post[]          @relation("likedBy")

  @@unique([name, age])
}

model UserPreference {
  profile_id    Int     @id @default(autoincrement())
  recentUpdates Boolean
  user          User    @relation(fields: [user_id], references: [user_id])
  user_id       Int     @unique
}

model Post {
  post_id    Int        @id @default(autoincrement())
  title      String?
  createdAt  DateTime
  updatedAt  DateTime
  author     User       @relation("writtenBy", fields: [author_id], references: [user_id])
  author_id  Int
  likedBy    User       @relation("likedBy", fields: [liked_id], references: [user_id])
  liked_id   Int
  categories Category[]
}

model Category {
  category_id Int    @id @default(autoincrement())
  name        String @unique
  posts       Post[]
}
