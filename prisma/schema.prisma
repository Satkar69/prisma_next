generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Author {
  id       Int     @id @default(autoincrement()) // @id attributes used to determine the primary key specifically used for id as integer
  name     String  @unique
  age      Int
  address  String?
  isActive Boolean @default(false)
}
